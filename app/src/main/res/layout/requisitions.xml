<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnRequest"
    android:layout_width="match_parent"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    android:layout_height="208dp"
    android:layout_marginVertical="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Request #1"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:fontFamily="@font/intermedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivStockImage"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginTop="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvOtherItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/interregular"
            android:text="+ 5 Other Items"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivStockImage" />

        <TextView
            android:id="@+id/tvApproval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Approved"
            android:textSize="15dp"
            android:fontFamily="@font/interregular"
            android:textColor="#32A05F"
            android:layout_marginTop="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcohol"
            android:fontFamily="@font/intermedium"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toEndOf="@+id/ivStockImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/interregular"
            android:text="RIS"
            app:layout_constraintStart_toEndOf="@+id/ivStockImage"
            app:layout_constraintTop_toBottomOf="@+id/tvItemName" />

        <TextView
            android:id="@+id/tvMeasurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/interregular"
            android:text="Liter"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/ivStockImage"
            app:layout_constraintTop_toBottomOf="@+id/tvItemType" />

        <TextView
            android:id="@+id/tvTotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/intermedium"
            android:textColor="@color/black"
            android:text="â‚± 999,999.00"
            app:layout_constraintStart_toEndOf="@+id/ivStockImage"
            app:layout_constraintTop_toBottomOf="@+id/tvMeasurement" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty:  9999"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/interregular"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotalCost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTotalCost" />

        <TextView
            android:id="@+id/btnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingRight="-5dp"
            android:text="View"
            android:textColor="@color/black"
            android:fontFamily="@font/intermedium"
            android:textSize="15dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"
            android:drawableTint="@color/black"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>